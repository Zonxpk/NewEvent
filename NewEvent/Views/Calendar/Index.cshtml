@{
    //ViewBag.Title = "Home Page";
    ViewBag.Title = "New Event System | Home";
}
<script type="text/javascript">
    Search = '@Url.Action("Search", "Home")';
    GetLine = '@Url.Action("GetLine", "Home")';
    GetSearch = '@Url.Action("GetSearch", "Home")';
    SessionUser = '@Session["User"].ToString()';
    us_dept = '@Session["Department"].ToString()';
</script>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/sweetalert")
<script>
    $(document).ready(function () {
        $("#menu1-1").addClass('active');
        $('#menu2-1').removeClass('active');
        $('#menu3-1').removeClass('active');
        $("[name='dept']").val(us_dept,true)
    });

</script>

<script src="~/Scripts/Calendar/Calendar.js"></script>

<style>

    .txtcenter {
        text-align: center;
    }

    .setcheckbox {
        margin-top: 10px;
        margin-right: 15px;
    }

    .btn-hidden {
        display: none;
    }

    .bg-warning > i {
        color:white;
    }

    span.info-box-number {
        font-size: 16.5px;
    }

    .btn-left{
        border-radius: 5px 0px 0px 5px;
    }

    .btn-right{
        border-radius: 0px 5px 5px 0px;
    }

    .fc-daygrid-body, .fc-scrollgrid-sync-table, .fc-col-header {
        width: 100% !important;
    }
</style>
<!-- Content Wrapper. Contains page content -->
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <button class="btn-hidden" type="submit" id="submit">  </button>

}

